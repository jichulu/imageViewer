{
  "name": "lite-image-viewer",
  "version": "1.0.2",
  "author": "jichulu",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jichulu/imageViewer.git"
  },
  "homepage": "https://jichulu.github.io/imageViewer/",
  "bugs": {
    "url": "https://github.com/jichulu/imageViewer/issues"
  },
  "description": "Lightweight zero-dependency TypeScript image viewer with zoom, drag, rotate, thumbnails, keyboard navigation.",
  "license": "MIT",
  "keywords": [
    "image",
    "viewer",
    "lightbox",
    "zoom",
    "gallery",
    "typescript",
    "thumbnails"
  ],
  "files": [
    "dist"
  ],
  "module": "dist/viewer.js",
  "types": "dist/viewer.d.ts",
  "style": "dist/image-viewer.css",
  "exports": {
    ".": {
      "import": "./dist/viewer.js",
      "types": "./dist/viewer.d.ts"
    },
    "./image-viewer.css": "./dist/image-viewer.css"
  },
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "tsup && npm run build:css",
    "build:css": "sass src/image-viewer.scss dist/image-viewer.css --no-source-map",
    "dev": "tsup --watch"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "html-minifier-terser": "^7.2.0",
    "sass": "^1.77.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  }
}
